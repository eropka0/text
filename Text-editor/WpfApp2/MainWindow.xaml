        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Editor" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textInputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="200" Margin="10"/>
        <Button x:Name="saveButton" Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="10" Click="SaveButton_Click"/>
    </Grid>
</Window>